{deps, [
   {lutil, {git, "https://github.com/lfex/lutil.git", {tag, "0.8.1"}}},
   {jsx, {git, "https://github.com/talentdeficit/jsx.git", {tag, "v2.7.1"}}},
   {mochiweb, {git, "https://github.com/mochi/mochiweb.git", {tag, "v2.12.0"}}}
  ]}.

{plugins, [
   {'lfe-compile', ".*", {git, "https://github.com/lfe-rebar3/compile.git", {tag, "0.4.0"}}}
  ]}.

{provider_hooks, [
   {pre, [{compile, {lfe, compile}}]}
  ]}.

{profiles, [
  {dev, [
    {plugins, [
      {lfe, {git, "https://github.com/rvirding/lfe.git", {tag, "v1.0.2"}}}]},
      {'lfe-version', ".*", {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.3.2"}}},
      {'lfe-repl', ".*", {git, "https://github.com/lfe-rebar3/repl.git", {tag, "0.2.1"}}},
      {'lfe-clean', ".*", {git, "https://github.com/lfe-rebar3/clean.git", {tag, "0.2.1"}}}
    ]},
  {test, [
    {deps, [
      {ltest, {git, "https://github.com/lfex/ltest.git", {tag, "0.8.2"}}}]},
    {eunit_opts, [verbose]},
    {eunit_compile_opts, [
        {src_dirs, ["test"]}
      ]}
    ]}
  ]}.
